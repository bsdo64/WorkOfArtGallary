extends layout

block content
    .wrapper.asidebg
    .primary.portfolio
        .container.box
            .light-wrapper
                h1 작품을 제출하세요!
                p
                    | 누구나 자신이 만든 작품을 제출 할 수 있습니다.
                    br
                    | 지금 바로 아래 양식을 작성하고 뽐내보세요
                form#design-form.classic-form(action='/submit', method='post',enctype="multipart/form-data")
                    h2 작품 설명
                    p
                    p
                    .submitform-aboutyou
                        p.submitform-firstname
                            label(for='DesignPublisher_first_name') 작가명
                            input#DesignPublisher_first_name.input-large(size='15', name='writer', type='text', maxlength='65')
                            br
                        p.submitform-lastname
                            label(for='DesignPublisher_last_name') 작품명
                            input#DesignPublisher_last_name.input-large(size='15', name='piece_name', type='text', maxlength='65')
                        p.submitform-email
                            label(for='DesignPublisher_email') 크기
                            input#DesignPublisher_email.input-large(size='20', name='size', type='text', maxlength='100')
                        p.submitform-twitter
                            label(for='DesignPublisher_twitter_account') 가격
                            input#DesignPublisher_twitter_account.input-large(size='13', name='price', type='text', maxlength='100')
                        p.submitform-twitter
                            label(for='DesignPublisher_twitter_account') 년도
                            input#DesignPublisher_twitter_account.input-large(size='13', name='date', type='text', maxlength='100')
                        p.submitform-twitter
                            label(for='DesignPublisher_twitter_account') 연락처
                            input#DesignPublisher_twitter_account.input-large(size='13', name='address', value='카톡, 전화번호' ,type='text', maxlength='100')
                    p
                        label(for='DesignPublisher_message')
                            | 설명

                        textarea#DesignPublisher_message.input-xxlarge(cols='20', rows='2', name='comment')

                    div
                        label(for='DesignPublisher_message')
                            | 작품 첨부
                        input(type='file', name='upload')
                    input.btn.btn-yellow.bigbtn(type='submit', name='yt0', value='제출합니다!')
                br(style='clear: both;')
            //
               wrapper
            br
            br
        //
           /.container
        //
           /.light-wrapper
    include footer